<h1 class="title">Devour the Burger!</h1>

<div class="container">
  <div class="row">
    
    <div class="col">
      <h2>Burgers Available</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{burgers devoured=false}}
        <p>{{burger_name}}</p>
        {{/if}}
        {{/each}}
      </ul>
      </div>
           
      <div class="col">
        <h2>Create a Burger</h2>
        <form class="create-form">      
          <div class="form-group">
            <label for="ca"></label>
            <input type="text" id="ca" name="burger_name" placeholder="Burger Name">
          </div>
        </form>      
      </div>

      <div class="col">
        <h2>Devoured</h2>
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <p>{{burger_name}}</p>
            {{/unless}}
            {{/each}}
          </ul>     
      </div>
  </div>
</div>


