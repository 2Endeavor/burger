<h1 class="title">Devour the Burger!</h1>

<div class="container">
  <div class="row">

    <div class="col">
      <h2>Burgers Available</h2>
      
        {{#each burgers}}
        {{#unless devoured}}
        {{!-- <p>{{burger_name}}</p> --}}
        <form class="create-form" action="/api/burgers/{{id}}" method="POST">
        <p>{{id}} {{burger_name}}</p>
        <input input type="hidden" class="burger_id" type="text" value={{this.id}}>
        {{!-- <input input type="hidden" class="burger_id" type="text" value={{this.devoured}}> --}}
        <button type="submit" class="btn btn-primary btn-sm">Devour</button>
        {{!-- <p>{{burger_name}}</p> --}}
        
        </form>
        {{/unless}}
        {{/each}}
      
    </div>

    <div class="col">
      <h2>Create a Burger</h2>
      <form class="create-form" action="/api/burgers" method="PUT">
        {{!-- <div class="form-group">
            <label for="ca"></label> --}}
        <input type="text" id="ca" name="burger_name" placeholder="Burger Name">
        {{!-- <button type="button" class="btn btn-primary btn-sm">Submit</button> --}}
        {{!-- </div> --}}
      </form>
    </div>

    <div class="col">
      <h2>Devoured</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{burgers devoured=false}}
        <p>{{burger_name}}</p>
        {{/if}}
        {{/each}}

      </ul>
    </div>
  </div>
</div>