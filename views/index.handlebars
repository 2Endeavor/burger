<div class="container">
  <div class="row">
    <div class="col">


      
<h2>Burgers Available</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <p>{{burger_name}}</p>
    {{/unless}}
  {{/each}}
</ul>
    </div>
    <div class="col">


<h2>Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <p>{{burger_name}}</p>
    {{/if}}
  {{/each}}
</ul>
    </div>
    <div class="col">


<h2>Create a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Eat a Burger</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Available
    </div>
  </div>
  </div>

  {{!-- <button type="submit">Add a Burger</button> --}}
</form>
